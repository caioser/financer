<html>
<head>
    <title>Financer</title>
    <link rel="stylesheet" href="/template.css" />
</head>
<body onload="load();">

<h1>Financer</h1>
<h2>New register</h2>

<form method="POST">
    <label>
        Description:
        <input type="text" name="desc" />
    </label>
    <br/>
    <label>
        Value:
        <input type="number" step="0.01" name="value" />
    </label>
    <br/>
    <label>
        Status:<div class="hidden" id="status">false</div>
        <input type="hidden" name="status" value="false" />
    </label>
    <br/>
    <label>
        Category:
        <select name="category">
            <option value="sample">Sample</option>
            <option value="sample">Sample</option>
            <option value="sample">Sample</option>
        </select>
    </label>
    <br/>
    <label>
        Box:
        <select name="box">
            <option value="sample">Sample</option>
            <option value="sample">Sample</option>
            <option value="sample">Sample</option>
        </select>
    </label>
    <br/>
    <label>
        Date:
        <input type="date" name="date" value="{{h.today.value}}">
    </label>
    <br/>
    <label>
        Repeat:<div class="hidden" id="repeat">false</div>
        <input type="hidden" name="repeat" value="false" />
    </label>
    <br/>
        {{!repeatKey}}
        <input type="hidden" name="repeatKey" />
    <label>
        fix:
        <select name="fix">
            <option value="monthly">Monthly</option>
            <option value="weekly">Weekly</option>
            <option value="yaerly">Yaerly</option>
        </select>
    </label>
    <br/>
    <label>
        installments:
        <input type="number" name="installments" value="1"/>
    </label>
    <br/>
    <label>
        tags:
        <input type="text" name="tags" />
    </label>
    <br/>
    <label>
        {{!late}}
        <input type="hidden" name="late" />
    </label>
    <br/>
    <label>
        <input type="submit" value="Salvar" />
    </label>

</form>

<script src="/scripts.js"></script>
</body>
</html>