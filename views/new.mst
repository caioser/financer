<html>
<head>
    <title>Financer</title>
    <link rel="stylesheet" href="/fonts/fontfaces.css" />
    <link rel="stylesheet" href="/template.css" />
</head>
<body onload="load();">
<form id="form-container" class="" method="POST">

    <div id="bkgrd">
        <div id="op-grid-container">
            <div id="op-line1">
                <a href="/"><div>Back</div></a>
                <div>Expense</div>
                <div>Incoming</div>
                <div>Transfer</div>
            </div>
            <div id="op-line2">
                <div id="move"></div>
                <div id="ball"></div>
            </div>
        </div>
            <input type="hidden" name="transaction" value="expense" />

        <div id="three-items">
            <div id="op-icon">-
            </div>
            <label>
            <div id="value-container" class="">
                <input id="front-value" type="text" name="frontvalue" value="0,00" />
                <input id="back-value" class="none" type="number" step="0.01" name="value" value="0.00" />
            </div>
            </label>
        

            <div id="status-container">
                <img class="hidden red" id="status" src="/like.png">
                <input type="hidden" name="status" value="false" />
            </div>
        </div>
    </div>
        <br/>



    <label>
    <div class="input-container">
        <div>Description:</div>
        <input placeholder="Description" type="text" name="desc" />
    </div>
    </label>
    <br/>
    <label>
        <div>Category:</div>
        <select name="category">
            <option value="sample">Sample</option>
            <option value="sample">Sample</option>
            <option value="sample">Sample</option>
        </select>
    </label>
    <br/>
    <label>
        <div>Box:</div>
        <select name="box">
            <option value="sample">Sample</option>
            <option value="sample">Sample</option>
            <option value="sample">Sample</option>
        </select>
    </label>
    <br/>
    <label>
        <div>Date:</div>
        <input type="date" name="date" value="{{h.today.value}}">
    </label>
    <br/>
    <label>
        <div>Repeat:</div>
        <div class="hidden red" id="repeat"></div>
        <input type="hidden" name="repeat" value="false" />
    </label>
    <br/>
        <input type="hidden" name="repeatKey" />
    <label>
        <div>fix:</div>
        <select name="fix">
            <option value="monthly">Monthly</option>
            <option value="weekly">Weekly</option>
            <option value="yaerly">Yaerly</option>
        </select>
    </label>
    <br/>
    <label>
        <div>installments:</div>
        <input type="number" name="installments" value="1"/>
    </label>
    <br/>
    <label>
        <div>tags:</div>
        <input type="text" name="tags" />
    </label>
    <br/>
    <label>
        {{!late}}
        <input type="hidden" name="late" />
    </label>
    <br/>
    <label>
        <input type="submit" value="Salvar" />
    </label>

</form>

<script src="/scripts.js"></script>
</body>
</html>